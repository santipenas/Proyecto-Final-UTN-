<h1>PÃ¡gina del Administrador</h1>
<h2>Hola {{persona}}</h2>

<div class="container" style="margin-top: 50px;">

  <div class="row">
    <p class="text-end">
      Hola
      {{persona}}!
      <a class="btn btn-danger" style="background-color: #ca5d53;" href="/admin/login/logout">Cerrar Sesion
        <i class="fas fa-sign-out-alt"></i></a></p>
  </div>

  <div class="row">
    <div class="col-7">
      <h3 style="margin-bottom: 30px; border-bottom: 1px solid #CA5D53">Listado de Clientes Nuevos</h3>
    </div>
    <div class="col-5 text-end">
      <a class="btn btn-success"  href="/admin/novedades/agregar">
        <i class="fas fa-plus" aria-hidden="true"></i>Nuevo</a>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col" style="background-color: #325485;">#</th>
            <th scope="col" style="background-color: #325485;">Nombre de Cliente</th>
            <th class="text-end" style="background-color: #325485;">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <!--esto de abajo es lo que luego debo recorrer con el each de Handlebars e ir reemplazando cada elemento de la tabla con HBS-->
          {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{nombre}}</td> <!--CAMBIA TITULO POR NOMBRE, FUNCIONA OK-->
              <td class="text-end">
                <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}">
                  <i class="fas fa-pencil" aria-hidden="true"></i></a>
                  <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}">
                  <i class="fas fa-trash" aria-hidden="true"></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>