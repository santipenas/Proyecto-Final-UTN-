<!-- esto es para el diseño y parte visual de la pagina de admin/login y lo hago con Bootstrap, un formulario basico. -->

<div class="container" style="margin-top: 100px;">
  <div class="row">
    <form action="/admin/login" method="post">
        <div class="mb-3 row">
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUser" placeholder="Usuario" name="usuario">
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-sm-10" >
                <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #CA5D53; margin:20px 500px;">Ingresar</button>               
    </form>
    {{#if error}} 
        <p>Usuario y/o Contraseña incorrectos</p> 
    {{/if}}
  </div>
</div>